<%= form_for @principal, url: {action: "create"} do |f| %>
    <%= f.text_field :name %>
    <%= f.fields_for 'user_attributes' do |builder| %>
        <%= builder.text_field :email %>
        <%= builder.password_field :password %>
        <%= builder.password_field :password_confirmation %>
    <% end %>
    <%= f.fields_for 'school_attributes' do |builder| %>
        <%= builder.text_field :name %>
    <% end %>

    <%= f.submit "Create" %>
<% end %>